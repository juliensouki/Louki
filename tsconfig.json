{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "noEmit": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "lib": ["es2015", "dom"],
    "types": [],
    "jsx": "react",
    "experimentalDecorators": true  
  },
  "paths": {
    "@lang/*": ["lang/*"],
    "@store/*": ["store/*"],
    "@components/*": ["components/*"],
    "@assets/*": ["assets/*"]
  },
  "files": [
    "./types/global.d.ts",
    "./src/client/Main.tsx"
  ]
}
