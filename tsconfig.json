{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "noEmit": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "lib": ["es2015", "dom"],
    "types": [],
    "jsx": "react",
    "baseUrl": "src/client",
    "experimentalDecorators": true,
    "paths": {
      "@shared/*": ["../shared/*"],
      "@lang/*": ["lang/*"],
      "@store/*": ["store/*"],
      "@components/*": ["components/*"],
      "@assets/*": ["../../assets/*"]
    }
  },
  "include": [
    "src/client/**/*.ts",
    "src/client/**/*.tsx",
  ],  
  "exclude": [
    ".eslintrc.js",
    "node_modules"
  ],
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "files": [
    "./types/global.d.ts",
    "./src/client/Main.tsx"
  ]
}
